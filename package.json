{
  "name": "@riadh-adrani/dom-router",
  "description": "Router for the DOM",
  "repository": {
    "type": "git",
    "url": "https://github.com/RiadhAdrani/dom-router"
  },
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": "./dist/index.js",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [],
  "scripts": {
    "test": "vitest",
    "test:once": "vitest run",
    "build:clean": "rm -rf dist",
    "build:types": "tsc --project tsconfig.build.json",
    "build": "yarn build:clean && tsc --project tsconfig.build.jsony",
    "check:lint": "npx eslint . --ext .ts",
    "check:format": "npx prettier --check ./",
    "check:types": "tsc --project tsconfig.json --noEmit",
    "fix:lint": "npx eslint . --fix --ext .ts",
    "fix:format": "npx prettier --write --check ./",
    "setup:husky": "yarn global add husky && husky install"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "prettier": "3.1.0",
    "typescript": "^5.2.0",
    "vite": "^5.0.4",
    "vitest": "^0.34.6"
  }
}
